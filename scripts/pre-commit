#!/bin/sh
# Pre-commit hook to enforce formatting and linting
# Install with: xmake run install_hooks

echo "Running pre-commit checks..."

# 1. Format Check
echo "  Checking formatting..."
cargo fmt --all -- --check
if [ $? -ne 0 ]; then
    echo "Error: Formatting check failed. Run 'cargo fmt --all' to fix."
    exit 1
fi

# 2. Clippy (Linting)
echo "  Running clippy..."
cargo clippy --workspace -- -D warnings
if [ $? -ne 0 ]; then
    echo "Error: Clippy check failed. Fix warnings above."
    exit 1
fi

echo "Pre-commit checks passed."
