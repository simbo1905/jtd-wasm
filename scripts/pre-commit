#!/bin/sh
# Pre-commit hook to enforce formatting and linting
# Install with: xmake run install_hooks

echo "Running pre-commit checks..."

# 1. Format Check
echo "  Checking formatting..."
if ! cargo fmt --all -- --check; then
    echo "Error: Formatting check failed. Run 'cargo fmt --all' to fix." >&2
    exit 1
fi

# 2. Clippy (Linting)
echo "  Running clippy..."
if ! cargo clippy --workspace -- -D warnings; then
    echo "Error: Clippy check failed. Fix warnings above." >&2
    exit 1
fi

echo "Pre-commit checks passed."
